<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF8800</item>
        <item name="colorPrimaryDark">#FF7700</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#FFFFFF</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#02BBD2</item>
        <item name="colorControlActivated">#02BBD2</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FF8800</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
